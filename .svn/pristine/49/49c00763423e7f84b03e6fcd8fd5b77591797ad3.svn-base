html,body{
    background-color: #eef2f2;
}
[v-cloak]{
  display: none;
}
h4{
    font-size: 3rem;
    text-align: center;
    color: #000;
    font-weight: 900;
}
h1{
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #00afd9;
    margin-top: 1.5rem;
}
h2{
    font-size: 3.5rem;
    font-weight: normal;
    margin-bottom: 1.5rem;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.top{
    position: relative;
    padding-top: 10rem;
}
.center{
    padding: 0 3rem;
}
.icon-btn{
    width: 3rem;
    height: 4rem;
    position: absolute;
    left: 3rem;
    padding-top: 0.8rem;
}
.icon {
    width: 1em;
    height: 1em;
    vertical-align: -0.15em;
    fill: currentColor;
    overflow: hidden;
    font-size: 3rem;
}
.rule{
    position: absolute;;
    font-size: 2.5rem;
    border-radius: 0.5rem;
    border: solid 1px #000;
    color: #000;
    padding: 0 0.5rem;
    right: 2rem;
    bottom: 0.2rem;
}
.invite{
    padding: 2rem;
    font-size: 3rem;
    border-radius: 1.25rem;
    text-align: center;
    background-color: #00afd9;
    color: #fff;
    margin-top: 3rem;
    box-sizing: border-box;
}
.share{
    padding: 1rem 3rem;
    width: 100%;
    background-color: #fff;
    color: #4f646a;
    box-sizing: border-box;
    box-shadow: 0 0 1rem rgba(0,0,0,0.2);
    border-radius: 1rem;
    /*border:1px solid rgba(0,0,0,0.2);*/
}
.person{
    /*height: 7rem;*/
    padding-top: 2.5rem;
    padding-bottom: 2.5rem;
    margin-bottom: 2rem;
}
.head{
    width: 6rem;
    height: 6rem;
    border-radius: 6rem;
    float: left;
    margin-right: 2rem;
}
h5{
    font-size: 2.5rem;
    color: #050707;
    line-height: 3rem;
    margin-bottom: 2rem;
}
.title{
    font-size: 2.5rem;
    color: #8aa0a6;
    line-height: 1rem;
}
.talk{
    font-size: 2.5rem;
    text-indent: 3.5rem;
    letter-spacing: 2px;
    margin-top: 6rem;
    padding-top: 2rem;
    /*padding-bottom: 2rem;*/
    /*height: 6rem;*/
    line-height: 4rem;
    overflow: hidden;
    text-overflow: ellipsis;
    /*display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;*/
    border-top: 1px solid #e6dbdb;
}
.book-map,.read-day{
    width: 100%;
    margin-bottom: 3rem;
    background-color: #f7f7f7;
    border: 2px solid #f7ecec;
    border-radius: 1rem;
    padding: 3rem;
    box-sizing: border-box;
}
.book-img{
    width: 12rem;
    height: 15rem;
    margin-right: 2rem;
    float: left;
}
.read-r{
  /*height: 10rem;*/
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}
.name{
    font-size: 2.5rem;
    color: #4f646a;
}
.book-name{
    font-size: 2.5rem;
    color: #000;
    margin: 0.5rem 0;
    font-weight: 900;
}
.read-day{
    padding: 0 2rem;
    margin-top: 1rem;
    display: flex;
    justify-content: space-between;
}
.read-day p{
    font-size: 2.5rem;
    color: #8aa0a6;
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
}
.read-day span{
    display: block;
    color: #040706;
    font-size: 2.5rem;
    margin-bottom: 0.8rem;
    text-align: center;
}
.read-day strong{
    font-size: 2.5rem;
    color: #1e2629;
}
.code{
    margin-top: 1rem;
    padding: 3rem 0;
    display: flex;
    justify-content: space-around;;
    background-color: #f7f7f7;
    border: 2px solid #f7ecec;
    border-radius: 1rem;
}
.code-p{
    width: 50%;
    display: flex;
    flex-flow: column;
    justify-content: space-around;
}
.code-p p{
    font-size: 3.2rem;
    margin-left: 2rem;
    line-height: 4rem;
    color: #00afd9;
    font-weight: 900;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e6dbdb;
}
.code-img{
    width: 60%;
    display: flex;
    justify-content: space-around;
}
.code-img img{
    max-width: 12rem;
    height: 12rem;
}
.make{
    font-size: 2.3rem;
    color: #1e2629;
    margin-left: 2rem;
    /*text-align: center;*/
}
.make img{
    width: 1.5rem;
    vertical-align: bottom;
}
.invite-number{
     margin: 0 auto;
     text-align: center;
     font-size: 2.5rem;
     margin-top: 1rem;
}
.invite-number img{
    width: 4rem;
    height: 4rem;
    border-radius: 2rem;
    display: inline-block;
    vertical-align: bottom;
}
.invite-number span{
    font-size: 2.5rem;
    font-weight: 900;
}
.cover{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.8);
}
.popup{
    position: relative;
    width: 60%;
    padding: 5rem;
    border-radius: 1rem;
    background-color: #fff;
    color: #000;
    font-size: 3rem;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);

}
.popup .icon{
    font-size: 3rem;
    position: absolute;
    top: 1rem;
    left: 1rem;
}
