<script type="text/javascript">
	apiready = function () {
        //countTime();
        adaptationModel();
        $analysis.bindEvent($api.byId('exit'), 'touchend', function () {
        	api.closeWin({});
        });
    };
    function adaptationModel() {
    	$api.css($api.byId('body'), 'height:' + api.frameHeight + 'px');
    	$api.css($api.byId('body'), 'width:' + api.frameWidth + 'px');
    }

    function countTime() {
        //获取当前时间
        var date = new Date();
        var now = date.getTime();
        //设置截止时间
        var endDate = new Date("2018-6-30 12:50:00");
        var end = endDate.getTime();
        //时间差
        var leftTime = end - now;
        //定义变量 d,h,m,s保存倒计时的时间
        var h, m, s;
        if (leftTime >= 0) {
        	h = Math.floor(leftTime / 1000 / 60 / 60 % 24);
        	m = Math.floor(leftTime / 1000 / 60 % 60);
        	s = Math.floor(leftTime / 1000 % 60);
        	h = checkTime(h);
        	m = checkTime(m);
        	s = checkTime(s);
        }
        //将倒计时赋值到div中
        if (h === '00' && m === '00' && s === '00') {
        	return;
				}
        function checkTime(i){ //将0-9的数字前面加上0，例1变为01
						if(i<10) {
							i = "0" + i;
						}
        }
        document.getElementById("timer").innerHTML = '<div class="box">\n' + h + '</div>：<div class="box">\n' + m + '</div>：<div class="box">\n' + s + '</div>';
        setTimeout(countTime, 1000);
    }
</script>

